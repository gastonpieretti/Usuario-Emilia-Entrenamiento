generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 1. Modelo de Usuario Principal
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String?
  lastName     String?
  passwordHash String
  role         Role     @default(CLIENT)
  
  // --- CAMPOS NUEVOS QUE FALTABAN ---
  planType     String?  @default("COMPLETO") 
  // ----------------------------------
  
  height       Float?
  weight       Float?
  age          Int?
  
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  profile      UserProfile?
  routines     Routine[]
  diets        Diet[]
  progress     Progress[]
  planSchedule Json?
}

// 2. Perfil Detallado
model UserProfile {
  id                 Int      @id @default(autoincrement())
  userId             Int      @unique
  user               User     @relation(fields: [userId], references: [id])
  
  // Biométricos
  gender             String?
  age                Int?
  weight_kg          Float?
  height_cm          Float?
  
  // --- ESTILO DE VIDA (LOS QUE DABAN ERROR) ---
  dailyActivity      String?  
  sleepQuality       String?
  stressLevel        String?
  // --------------------------------------------
  
  // Entrenamiento
  goal               String?
  trainingLocation   String?
  experienceLevel    String?
  daysPerWeek        Int?
  sessionDurationMin Int?
  
  // Dolores
  painColumna        Boolean  @default(false)
  painHombro         Boolean  @default(false)
  painRodilla        Boolean  @default(false)
  painCadera         Boolean  @default(false)
  painTobillo        Boolean  @default(false)
  
  // Nutrición
  dietPreference     String?
  waterIntake        String?
  dislikedFood       String?
  
  // Salud
  injuries           String? 
  
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Routine {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  exercises   Json
  clientId    Int
  client      User      @relation(fields: [clientId], references: [id])
  assignedBy  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Diet {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  meals       Json
  clientId    Int
  client      User      @relation(fields: [clientId], references: [id])
  assignedBy  Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Progress {
  id        Int      @id @default(autoincrement())
  clientId  Int
  client    User     @relation(fields: [clientId], references: [id])
  date      DateTime @default(now())
  weight    Float?
  notes     String?
  photos    String[]
  metrics   Json?
}

enum Role {
  ADMIN
  COACH
  CLIENT
}
